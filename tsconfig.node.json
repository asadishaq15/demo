{
  "compilerOptions": {
    "composite": true,               // <-- required for project references
    "declaration": true,             // generates .d.ts so that composite works
    "declarationMap": true,          // (optional, but often paired with declaration)
    "emitDeclarationOnly": true,     // only emit types, no JS

    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"

    /* remove "noEmit": true — we’re now emitting declarations */
  },
  "include": ["vite.config.ts"]
}